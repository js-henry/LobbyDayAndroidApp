<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="false"
        android:drawable="@color/list_row_default_background1"/>
    <item
        android:drawable="@color/list_row_activated_background1"
        android:state_activated="true"/>

    <!-- no effect for the following: -->
    <item android:state_selected="true"
        android:drawable="@color/list_row_selected_background" />
    <item android:state_checked="true"
        android:drawable="@color/list_row_checked_background" />

    <!-- leave pressed state undefined or it will flash when the non-selectable list is pressed
            <item android:state_pressed="true"
                android:drawable="@color/list_row_pressed_background" />
    -->
    <item
        android:drawable="@color/android:transparent"/>
</selector>
